@model IEnumerable<Rocky.Models.ApplicationType>

    <div class="container p-3">
        <div class="row p-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Application Type
                </h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                    Create New Application Type
                </a>
            </div>
        </div>

        <br /> <br />

        @*Check if the ApplicationType exist*@
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="100%">@obj.Name</td>
                            <td class="text-center">
                                <div class="w-75 btn-group btn" role="group">
                                    <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                        Edit
                                    </a>
                                    <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Application Type Exists</p>
        }
    </div>